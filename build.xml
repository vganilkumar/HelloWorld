<?xml version="1.0" ?> 
<project name="AntExample1" default="deploy">

	<path id="compile.classpath">
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<target name="init">
		<mkdir dir="build/classes"/>
		<mkdir dir="dist" />
		<property name="tomcat-home" value="D:\ContinousIntegration\apache-tomcat-8.0.39\webapps"/>
		<property name="src-dir" value="D:\ContinousIntegration\apache-tomcat-8.0.39\webapps"/>
	</target>
	
	<target name="compile" depends="init" >
		<javac destdir="build/classes" debug="true" srcdir="${src-dir}">
			<classpath refid="compile.classpath"/>
		</javac>
	</target>
	
	<target name="war" depends="compile">
		<war destfile="dist/HelloWorld.war" webxml="WebContent/WEB-INF/web.xml">
			<fileset dir="WebContent"/>
			<lib dir="WebContent/WEB-INF/lib"/>
			<classes dir="build/classes"/>
		</war>
	</target>
	<target name="deploy" depends="war">
		<copyfile src="dist/HelloWorld.war" dest="${tomcat-home}"/>
	</target>
	
	<target name="clean">
		<delete dir="dist" />
		<delete dir="build" />
	</target>
	
</project>